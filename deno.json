{
  "nodeModulesDir": "auto",
  "imports": {
    "@ftrack/api": "npm:@ftrack/api@^1.11.2",
    "csv-writer": "npm:csv-writer@^1.6.0",
    "dotenv": "npm:dotenv@^16.4.7",
    "inquirer": "npm:inquirer@^12.4.2",
    "js-yaml": "npm:js-yaml@^4.1.0",
    "moment": "npm:moment@^2.30.1",
    "chalk": "jsr:@nothing628/chalk",
    "crypto": "jsr:@std/crypto@1.0.4/crypto"
  },
  "tasks": {
    "build": "deno task build-linux && deno task build-windows && deno task build-macos",
    "build-linux": "deno compile --no-check --allow-env --allow-read --allow-write --allow-net --allow-sys --target x86_64-unknown-linux-gnu --output dist/astraftracktools-linux src/index.ts",
    "build-windows": "deno compile --no-check --allow-env --allow-read --allow-write --allow-net --allow-sys --target x86_64-pc-windows-msvc --output dist/astraftracktools-windows.exe src/index.ts",
    "build-macos": "deno compile --no-check --allow-env --allow-read --allow-write --allow-net --allow-sys --target x86_64-apple-darwin --output dist/astraftracktools-macos src/index.ts",
    "start": "deno run --allow-env --allow-read --allow-write --allow-net --allow-sys src/index.ts",
    "dev": "deno run --allow-env --allow-read --allow-write --allow-net --watch src/index.ts",
    "dev:debug": "deno run --allow-env --allow-read --allow-write --allow-net --allow-sys --watch src/index.ts DEBUG",
    "test": "deno test --allow-read --allow-write --allow-env",
    "coverage": "deno test --coverage"
  },
  "test": {
    "include": ["src/tests/"]
  },
  "compilerOptions": {
    "strict": true
  }
}
