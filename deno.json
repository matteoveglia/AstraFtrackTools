{
  "nodeModulesDir": "auto",
  "imports": {
    "@deno-library/progress": "jsr:@deno-library/progress@^1.5.1",
    "@ftrack/api": "npm:@ftrack/api@^1.11.2",
    "csv-writer": "npm:csv-writer@^1.6.0",
    "dotenv": "npm:dotenv@^17.2.2",
    "@cliffy/prompt": "jsr:@cliffy/prompt@^1.0.0-rc.8",
    "js-yaml": "npm:js-yaml@^4.1.0",
    "moment": "npm:moment@^2.30.1",
    "chalk": "jsr:@nothing628/chalk@1.0.1",
    "crypto": "jsr:@std/crypto@1.0.5/crypto",
    "@std/assert": "jsr:@std/assert@^1.0.14",
    "ink": "npm:ink@^5.1.0",
    "react": "npm:react@^18.3.1",
    "ink-text-input": "npm:ink-text-input@^6.0.0"
  },
  "tasks": {
    "build": "deno task build-linux && deno task build-windows && deno task build-macos",
    "build-linux": "deno compile --no-check --allow-run --allow-env --allow-read --allow-write --allow-net --allow-sys --target x86_64-unknown-linux-gnu --output dist/astraftracktools-linux src/index.tsx",
    "build-windows": "deno compile --no-check --allow-run --allow-env --allow-read --allow-write --allow-net --allow-sys --target x86_64-pc-windows-msvc --output dist/astraftracktools-windows.exe src/index.tsx",
    "build-macos": "deno compile --no-check --allow-run --allow-env --allow-read --allow-write --allow-net --allow-sys --target x86_64-apple-darwin --output dist/astraftracktools-macos src/index.tsx",
    "start": "deno run --allow-env --allow-read --allow-write --allow-net --allow-sys src/index.tsx",
    "dev": "deno run --allow-env --allow-read --allow-write --allow-net --allow-sys --watch src/index.tsx",
    "dev:debug": "deno run --allow-env --allow-read --allow-write --allow-net --allow-sys --watch src/index.tsx DEBUG",
    "test": "deno test --allow-read --allow-write --allow-env",
    "coverage": "deno test --coverage",
    "typecheck": "deno check src/**/*.ts src/**/*.tsx"
  },
  "test": {
    "include": ["src/tests/"]
  },
  "compilerOptions": {
    "strict": true,
    "jsx": "react-jsx",
    "jsxImportSource": "react"
  }
}
